<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/share_top_btn_container"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@color/color_theme_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/share_cancel_btn"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="取消"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_frame"
            android:onClick="backToLast"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/share_share_btn"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="发表"
            android:textSize="16sp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_frame"
            android:onClick="share"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/share_content_container"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_top_btn_container">

        <EditText
            android:id="@+id/share_edit_text"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:gravity="start|top"
            android:background="@null"
            android:hint="分享你的轨迹"
            android:textColorHint="@color/hint_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <GridView
            android:id="@+id/share_picture_gridview"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:numColumns="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/share_edit_text">
        </GridView>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="368dp"
        android:layout_height="0.7dp"
        android:layout_marginTop="20dp"
        android:background="@color/hint_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_content_container"
        tools:layout_editor_absoluteX="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你还可以分享到"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_content_container"
        />
    <ImageButton
        android:id="@+id/share_others_qq"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/qq_zone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_content_container"
        app:layout_constraintHorizontal_bias="0.2"/>
    <ImageButton
        android:id="@+id/share_others_pengyouquang"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/weixin_pengyouquang"
        android:onClick="share"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_content_container"
        />
    <ImageButton
        android:id="@+id/share_others_weibo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:background="@mipmap/weibo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_content_container"
        app:layout_constraintHorizontal_bias="0.8"/>


</android.support.constraint.ConstraintLayout>